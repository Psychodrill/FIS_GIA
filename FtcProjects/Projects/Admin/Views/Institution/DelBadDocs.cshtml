<div class="form-group">
    <div class="col-md-8">
        <label class="control-label" for="InstitutionSearch">Образовательные организации:</label>
        <input type="text" size="100" class="form-control input-sm" id="InstitutionSearch" name="InstitutionSearch" placeholder="Введите наименование ОО" />
        <br />
    </div>
    <div class="col-md-8">
        <div id="search_result" />
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#InstitutionSearch').on('input', function () {
            var Search = {
                search: $('#InstitutionSearch').val(),
                mode: 2
            }
            $.ajax({
                type: "POST",
                url: '@Url.Action("SearchInstitutions", "Institution")',
                data: Search,
                success: function (msg) {
                    $('#search_result').empty().html(msg);
                }
            });

        });




    });


</script>