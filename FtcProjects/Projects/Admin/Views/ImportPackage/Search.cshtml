<div class="form-group">
    <div class="col-md-8">
        <input type="text" size="100" class="form-control input-sm" id="packageId" placeholder="Введите номер пакета" />
        <button id="packageSearch">Поиск</button>
        <br />
    </div>
    <div class="col-md-8">
        <div id="search_result" />
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#packageSearch').on('click', function () {
            var Search = {
                packageId: $('#packageId').val()
            }
            $.ajax({
                type: "POST",
                url: '@Url.Action("Search", "ImportPackage")',
                data: Search,
                success: function (msg) {
                    $('#search_result').empty().html(msg);
                }
            });

        });

    });

</script>