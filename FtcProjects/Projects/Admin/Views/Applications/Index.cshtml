<ul>
    <li><a href="#" id="CheckApplication" name="CheckApplication">Проверка ID документа</a></li>
</ul>
<br />

<div class="form-group">
    <div class="col-md-8">
        <div id="result" />
    </div>
</div>



<script type="text/javascript">

    $(document).ready(function () {
       $('#EditCampaign').click(function (e) {
            e.preventDefault();
            $.ajax({
                type: "POST",
                url: '@Url.Action("CheckApplication", "Applications")',
                success: function (msg) {
                $('#result').empty().html(msg);
                }
            });
        });


    });

</script>

